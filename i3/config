set $mode_system select: lock(L) exit(E) reboot(R) poweroff(O) cancel(Esc)
bindsym $mod+Shift+q mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock -i '~/.wallpaper.png', mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym o exec --no-startup-id systemctl poweroff, mode "default"
    bindsym Escape mode "default"
}

# open app on specific workspace
assign [class="Gnome-terminal"] $ws3
assign [class="Emacs"] $ws2
assign [class="Google-chrome"] $ws1